{
  "name": "terminal",
  "version": "1.0.0",
  "description": "A simple terminal emulator for macOS",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --mac",
    "dist": "electron-builder --mac --dir"
  },
  "build": {
    "appId": "com.terminal.app",
    "productName": "Terminal",
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": "dir",
      "icon": "icon.png"
    },
    "files": [
      "main.js",
      "index.html",
      "node_modules/**/*"
    ],
    "extraResources": [],
    "asar": false
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.13.3"
  },
  "dependencies": {
    "@xterm/addon-fit": "^0.10.0",
    "@xterm/xterm": "^5.5.0",
    "node-pty": "^1.0.0"
  }
}
